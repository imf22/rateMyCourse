//- truckpage_template.pug

doctype html
head 
    meta(charset = 'utef-8')
    title #{truckname} Reviews 

body     
    h1 #{truckname}: 

    

    - var img = `./pictures/${imgpath}`
        img(src=img style='width: 60vh;')
    h2 Cuisine: #{cuisine}
    h2 Rating: #{rating} stars
    h3
        div 
            a(href="/postReview.html") Post Reviews
        div 
            a(href="/index.html") Home Page
 
    //- button(style="display: inline;") Post Review

    
    - for (userreview of reviews)
        hr(size="2" width="95%" color="black")
        div
            h2 #{userreview.user}
            h3 User Rating: #{userreview.rate}
            p #{userreview.review}


    